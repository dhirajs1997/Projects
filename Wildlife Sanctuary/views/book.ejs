      <form class="" action="/booking" method="post">
        <label for="class"><b>Email</b></label>
        <br>
        <input type="email" name="email" required />
        <label for="class"><b>Passphrase</b></label>
        <br>
        <input type="password" name="passphrase" required />
        <br>
        <br>
        <label for="submitbutton" style="font-weight: bold">View all reservations</label><br><br>
        <button type="submit" name="submitbutton" style="padding: 5px 20px;"><b>VIEW</b></button>
      </form>
    </div>
    <hr>

    <div class="content">
      <div class="contentTitle">
        <h2>Reserve ticket</h2>
      </div>
      <form class="" action="/reserve" method="post">
        <label for="class"><b>Email</b></label><br>
        <input type="email" name="email" required /><br><br>
        <label for="class"><b>Date</b></label><br>
        <input type="date" name="date" required /><br><br>
        <label for="class"><b>Ticket Class</b></label>
        <label>
          <input type="radio" name="class" value="550" required  />
          <span>Admission plus</span>
        </label>
        <span>&nbsp;&nbsp;&nbsp;</span>
        <label>
          <input type="radio" name="class" value="450" required  />
          <span>Admission</span>
        </label>
        <br><br>
        <label for="class">Send confirmation mail?</label>
        <label>
          <input type="radio" name="sendmail" value="1" required  />
          <span>Yes</span>
        </label>
        <span>&nbsp;&nbsp;&nbsp;</span>
        <label>
          <input type="radio" name="sendmail" value="0" required  />
          <span>No</span>
        </label>
        <br><br>
        <button type="submit" name="type" value="adduser"><b>RESERVE</b></button>
      </form>
